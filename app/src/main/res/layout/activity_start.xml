<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".ui.main.StartActivity" android:id="@+id/relativeLayout">
    <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/scrolling_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            scrolling_image_view:speed="2dp"
            scrolling_image_view:src="@drawable/banner2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="60dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:id="@+id/slogan"
            android:layout_width="337dp"
            android:layout_height="43dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/hhslogan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintStart_toStartOf="parent" />
    <pl.droidsonroids.gif.GifImageView
            android:layout_width="138dp"
            android:layout_height="114dp"
            android:src="@drawable/chefkitty"
            android:layout_marginTop="16dp" android:layout_marginStart="228dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <pl.droidsonroids.gif.GifImageView
            android:layout_width="160dp"
            android:layout_height="124dp"
            android:src="@drawable/kittychef2"
            android:layout_marginStart="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toBottomOf="@+id/button2"/>
    <!--<pl.droidsonroids.gif.GifImageView-->
            <!--android:layout_width="138dp"-->
            <!--android:layout_height="123dp"-->
            <!--android:src="@drawable/kittychef2"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"-->
            <!--android:layout_marginStart="32dp"/>-->
    <Button
            android:text="Start Game"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-condensed"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/startgame_button" android:layout_marginStart="8dp"
            android:layout_marginTop="208dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.505"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintVertical_bias="0.262"/>
    <Button
            android:text="Add Menu Items"
            android:layout_width="187dp"
            android:layout_height="54dp"
            android:background="@drawable/rounded_button"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-condensed"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/button2"
            android:layout_marginTop="420dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/slogan" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:id="@+id/logo"
            android:layout_width="241dp"
            android:layout_height="90dp"
            android:layout_marginTop="64dp"
            android:scaleX="2.2"
            android:scaleY="2.25"
            android:src="@drawable/hhlogo2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="60dp"/>
    <ImageView
            android:layout_width="226dp"
            android:layout_height="110dp" scrolling_image_view:srcCompat="@drawable/kittychef3"
            android:id="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/startgame_button"/>


</android.support.constraint.ConstraintLayout>